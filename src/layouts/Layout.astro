    <!--     <link rel="manifest" href="/site.webmanifest" /> -->

    <link rel="preload" href="/fonts/inter/Inter-Bold.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/inter/Inter-Medium.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/inter/Inter-Regular.woff2" as="font" type="font/woff2" crossorigin="anonymous" />

    <link rel="preload" href="/_astro/app_explore_memories.Ccz3ZaDc_1gQojn.webp" as="image" type="image/webp" />
    <link rel="preload" href="/_astro/background_blob_left.Be36CIK0_Z1vdsNg.svg" as="image" type="image/svg" />
    <link rel="preload" href="/_astro/background_blob_right.ttfU8S75_Z1o5mXQ.svg" as="image" type="image/svg" />

    <!--    <link rel="preload" href="/styles.css" as="style" /> -->

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="select-none flex flex-col relative border-green-800 border-0">
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: inter;
  }
  code {
    font-family: inter;
  }
</style>
